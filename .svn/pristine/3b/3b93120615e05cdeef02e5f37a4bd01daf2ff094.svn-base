<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <meta charset="utf-8">
    <title>标签</title>
    <link rel="stylesheet" href="/css/reg.server.css">
</head>
<body class="pd10">
    <div class="clearfix">
        <div class="form-list col-6">

            <div class="form-item tag-pd20 clearfix">
                <div class="col-4 item-name">
                    <div class="tag-title">
                        <span class="tag-arrow"></span>创建标签类型：
                    </div>
                </div>
                <div class="item-name">
                    <div class="tag-title">
                        <label><input type="radio" name="tag" value="big">大类</label>
                        <label><input type="radio" name="tag" value="medium">中类</label>
                        <label><input type="radio" name="tag" value="small">小类</label>
                    </div>
                </div>
            </div>

            <div class="form-item tag-pd20 clearfix">
                <div class="clearfix ipt-box col-8 tag-fr">
                    <select class="tag-select ipt-txt">
                        <option class="tag-default" disabled selected>请先选择标签大类名称</option>
                        <option>大类1111</option>
                        <option>大类2222</option>
                        <option>大类3333</option>
                    </select>
                </div>
            </div>

            <div class="form-item tag-pd20 clearfix">
                <div class="clearfix ipt-box col-8 tag-fr">
                    <select class="tag-select ipt-txt">
                        <option class="tag-default" disabled selected>请先选择标签中类名称</option>
                        <option>中类1111</option>
                        <option>中类2222</option>
                        <option>中类3333</option>
                    </select>
                </div>
            </div>

            <div class="form-item tag-pd20 clearfix">
                <div class="clearfix ipt-box col-8 tag-fr">
                    <input class="ipt-txt" type="text " placeholder="请输入要创建的标签中类名称">
                </div>
            </div>

            <div class="form-item tag-pd20 clearfix">
                <div class="tag-show tag-fr">
                    <ul>
                        <li><span class="tag-code">A001001</span><span>人才中介人才中介人才中介</span></li>
                        <li><span class="tag-code">A001001</span><span>人才中介人才中介人才中介</span></li>
                        <li><span class="tag-code">A001001</span><span>人才中介人才中介人才中介</span></li>
                        <li><span class="tag-code">A001001</span><span>人才中介人才中介人才中介</span></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="form-list col-6">
            <div class="form-item clearfix">
                <div class="tag-name item-name">
                    <div class="tag-title">
                        <span class="tag-arrow"></span>创建标签类型：
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix">
        <div class="form-list">

            <div class="form-item clearfix">
                <label class="col-2 item-name">标签说明：</label>
                <div class="ipt-box col-8">
                    <input class="ipt-txt" type="text">
                </div>
            </div>

            <div class="form-item clearfix">
                <label class="col-2 item-name"><span class="tag-star">*</span>适用地区：</label>
                <div class="ipt-box col-3">
                    <select class="tag-select ipt-txt tag-region">
                        <option class="tag-default"></option>
                    </select>
                </div>
            </div>

            <div class="form-item clearfix">
                <div class="col-2 item-name">申请人：</div><span class="col-2 tag-p7">李二狗</span>
                <div class="item-name">申请日期：</div><span class="col-2 tag-p7">2017-02-15</span>
                <div class="item-name">申请部门：</div><span class="col-2 tag-p7">开发部</span>
            </div>

        </div>
    </div>

    <div class="clearfix">
        <div class="form-item clearfix mt10">
            <div class="btn-box">
                <input type="button" value="提 交" class="btn mr20">
                <input type="button" value="关 必" class="btn">
            </div>
        </div>
    </div>
</body>
</html>
