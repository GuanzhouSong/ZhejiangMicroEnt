                    itemStyle: {
                        normal: {
                            borderColor: 'rgba(1,130,250,0.7)',
                            borderWidth: 1,            // 标注边线线宽，单位px，默认为1
                            color:'rgba(1,130,250,0.7)',
                            label: {
                                show: false
                            }
                        },
                        emphasis: {
                            borderColor: 'rgba(1,130,250,0.7)',
                            label: {
                                show: false
                            }
                        }
                    },
