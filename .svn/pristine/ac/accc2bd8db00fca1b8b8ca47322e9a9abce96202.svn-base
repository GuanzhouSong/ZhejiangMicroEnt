                    }
                },
                data: [],
                markPoint: {
                    symbol: 'image:///img/bigscreen/markpoint-dot.png',
                    symbolSize: function (v) {
                        return 4
                    },

                    itemStyle: {
                        normal: {
                            label: {
                                show: true,
                                position:'top',
                                formatter: function (obj) {
                                    return obj.name;
                                },
                                textStyle:{
                                    color:'#fff',
                                    fontSize:12
