        '嘉兴': [120.9155, 30.6354],
        '湖州': [119.8608, 30.7782]
    };
    var options={
        tooltip: {
            trigger: 'item',
            formatter: '{b}',
            backgroundColor: 'rgba(0,0,0,.6)',
            borderColor: '#00b4ff',
            padding: 10,
            borderWidth: 1,
            textStyle: {
                color: '#00b4ff',
                fontSize: 14
            }
        },
        itemStyle: {
            normal: {
                borderWidth: "2px",
                borderColor: "#191a4b",
                color: "#08568f"
            }
        },
        series: [
            {
                name: '浙江',
                type: 'map',
                mapType: 'ZJ',
                roam: true,
                mapLocation: {
                    x: 'center',
                    y: 'center',
                    width: 650,
                    height: 520
                },
                itemStyle:{
                    normal:{
                        borderColor:'rgba(10,21,62,.6)',
                        borderWidth:1,
                        areaStyle:{
                            color: 'rgba(0,180,255,.4)'
                        }
                    }
                },
                data: [],
                markLine: {
                    symbol: 'arrow',
                    smooth: true,
                    effect: {
                        show: true,
                        scaleSize: 1,
                        period: 30,
                        color: '#fff',
                        shadowBlur: 3
                    },
                    itemStyle: {
                        normal: {
                            show: false,
                            color: '#84b55d',
